<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical" 
	android:background="#47CC96">

<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_edge"
	android:orientation="vertical" >

  	<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
 
   <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="ImageProfile"
        android:src="@drawable/ic_launcher" />
         
  	<Button
  		android:id="@+id/Profilebtn"
  		style="?android:attr/buttonStyleSmall"
  		android:background="@null"
  		android:layout_width="80dp"
  	    android:layout_height="80dp" />

     </RelativeLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
   
	    <TextView
	        android:id="@+id/tvFirstnameProfile"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="5dp"
	        android:textSize="25sp" />
	   	
	    <TextView
	        android:id="@+id/tvSecondnameProfile"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:textSize="18sp" />

    	</LinearLayout>

    </LinearLayout>

  	  <LinearLayout
        	android:layout_width="match_parent"
       	 	android:layout_height="wrap_content"
         	android:orientation="vertical"
         	android:layout_marginTop="@dimen/padding_edge"
         	android:background="@drawable/abc_menu_dropdown_panel_holo_light" >

  	 <Spinner
          android:id="@+id/sCategorySelector"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:entries="@array/category_array" />
  	 
  	    </LinearLayout>
  	 
	  	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="@dimen/padding_edge"
	        android:background="@drawable/abc_menu_dropdown_panel_holo_light" >
   
		 	<EditText
		 	    android:id="@+id/etTitle"
		 	    android:layout_width="match_parent"
		 	    android:layout_height="wrap_content"
				android:hint="@string/Title"
		   	    android:background="#999999"
		   	    android:padding="8dp"
		   	    android:textColor="#ffffff" >  	 
		 	</EditText>
		
	       <EditText
	           android:id="@+id/etQuestion"
	   	       android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:minHeight="100dp"
	           android:gravity="top"
	           android:padding="8dp"
	           android:background="#ffffff"
	           android:hint="@string/Question">
	       </EditText>

        </LinearLayout>

      <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_edge"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light" >

        <Button
            android:id="@+id/bAskGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="5"
            android:hint="@string/bAskGroup"/>
        
        <View
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#222222" />

        <Button
            android:id="@+id/bAskPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="@string/bAskPublic" />
        
    </LinearLayout>
    
     </LinearLayout>
    
</ScrollView>


</LinearLayout>